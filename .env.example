# Server Configuration
PORT=5001
NODE_ENV=development

# Database Configuration
# Connection pool parametreleri: connection_limit, pool_timeout
DATABASE_URL="postgresql://username:password@localhost:5432/yyd_db?connection_limit=20&pool_timeout=20&connect_timeout=10"

# PostgreSQL (for Docker)
POSTGRES_USER=yyd_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=yyd_db

# Redis Configuration
REDIS_URL="redis://localhost:6379"

# JWT Secret
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_EXPIRES_IN=7d

# API Base URL
BASE_URL=http://localhost:5001

# CORS Origins
ADMIN_PANEL_URL=http://localhost:3000
PUBLIC_WEBSITE_URL=http://localhost:3001

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf

# Email Configuration (optional - for future use)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# SMTP_FROM=noreply@yyd.org.tr

# Payment Gateway (future use)
# IYZICO_API_KEY=your_iyzico_api_key
# IYZICO_SECRET_KEY=your_iyzico_secret_key
# IYZICO_BASE_URL=https://sandbox-api.iyzipay.com

# Logging
LOG_LEVEL=info
